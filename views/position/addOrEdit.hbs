<h3>{{viewTitle}}</h3>

    <form action="/position" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{position._id}}">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" value="{{position.name}}" placeholder="Name">
                        <div class="text-danger">
                {{position.nameError}}
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group md-6">
                <label>Salary</label>
                <input type="number" name="salary" placeholder="Salary" value="{{position.salary}}" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
            <a href="/position/list" class="btn btn-danger">
                <i class="fa fa-list-alt"></i>View All
            </a>
        </div>


    </form>
