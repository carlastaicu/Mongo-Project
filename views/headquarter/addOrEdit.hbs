<h3>{{viewTitle}}</h3>

    <form action="/headquarter" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{headquarter._id}}">
        <div class="form-row">
            <div class="form-group md-6">
                <label>City</label>
                <input type="text" name="city" placeholder="City" value="{{headquarter.city}}" class="form-control">
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group md-6">
                <label>Street Address</label>
                <input type="text" name="streetAddress" placeholder="Street Address" value="{{headquarter.streetAddress}}" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group md-6">
                <label>Area</label>
                <input type="number" name="area" placeholder="Area" value="{{headquarter.area}}" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group md-6">
                <label>Built</label>
                <input type="date" name="built" placeholder="Built" value="{{headquarter.built}}" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
            <a href="/headquarter/list" class="btn btn-danger">
                <i class="fa fa-list-alt"></i>View All
            </a>
        </div>


    </form>
