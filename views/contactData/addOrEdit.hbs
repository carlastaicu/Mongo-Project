<h3>{{viewTitle}}</h3>

    <form action="/contactData" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{contactData._id}}">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" value="{{contactData.email}}" placeholder="Email">
            <div class="text-danger">
                    {{contactData.emailError}}
                </div>
        </div>
        <div class="form-row">
            <div class="form-group md-6">
                <label>Phone Number</label>
                <input type="number" name="phoneNumber" placeholder="Phone Number" value="{{contactData.phoneNumber}}" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
            <a href="/contactData/list" class="btn btn-danger">
                <i class="fa fa-list-alt"></i>View All
            </a>
        </div>


    </form>
